<htmlform>
    <!-- Autogenerated example form  (template from 01-Nov-2010 -->
    <macros>
        paperFormId = (Fill this in)
        headerColor =#009d8e
        fontOnHeaderColor = white
    </macros>

    <style>
        .section {
        border: 1px solid $headerColor;
        padding: 2px;
        text-align: left;
        margin-bottom: 1em;
        }
        .sectionHeader {
        background-color: $headerColor;
        color: $fontOnHeaderColor;
        display: block;
        padding: 2px;
        font-weight: bold;
        }
        table.baseline-aligned td {
        vertical-align: baseline;
        }
    </style>

    <span style="float:right">Paper Form ID: $paperFormId</span>
    <h2>Child Follow Up (v1)</h2>

    <section>
        <table class="baseline-aligned" cellspacing="10" cellpadding="5">
            <tr>
                <td>State:</td>
                <td><encounterLocation default="GlobalProperty:default_location"/></td>
            </tr>
            <tr>
                <td>LGA:</td>
                <td><encounterLocation default="GlobalProperty:default_location"/></td>
            </tr>
            <tr>
                <td>Facility Name:</td>
                <td><encounterLocation default="GlobalProperty:default_location"/></td>
            </tr>
            <tr>
                <td>Birth Cohort Month:</td>
                <td></td>
            </tr>
            <tr>
                <td>Birth Cohort Year</td>
                <td><encounterProvider/></td>
            </tr>

        </table>
    </section><br/>
    <section headerLabel="Infant's Registration Information" style="margin-top: 20px;">
        <table cellspacing="7" cellpadding="5" style="width: 100%;">
            <tr>
                <td><b>Date of Birth</b> <lookup class="value" complexExpression="#if( \$patient.birthdateEstimated ) ~#end"/> <lookup class="value" expression="patient.birthdate"/>
                    (Age: <lookup class="value" expression="patient.age"/>)</td>
                <obs conceptId="163260" labelText="Date of 1st Visit:"/>
                <td><b>Sex</b> <lookup class="value" expression="patient.gender"/></td>
            </tr>
            <tr>
                <td><b>Surname</b><lookup expression="patient.personName.familyName"/></td>
                <td><b>Other name</b><lookup expression="patient.personName.givenName"/></td>
                <td><b>Middle Name</b><lookup expression="patient.personName.middleName"/></td>
            </tr>
        </table>
    </section><br/>
    <section headerLabel="Mother's Registration Information">
        <table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
            <tr>
                <td>Mother Hosp. Reg. No.</td>
                <td></td>
                <td>Mother's ANC No</td>
                <td></td>
            </tr>
            <tr>
                <td>Mother's Surname</td>
                <td></td>
                <td>Mother's Othername</td>
                <td></td>
            </tr>
            <tr>
                <td>Mother's Phone No</td>
                <td></td>
                <td>Mother's Address</td>
                <td></td>
            </tr>
        </table>
    </section><br/>
    <section headerLabel="Mother's ART">
        <table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
            <tr>
                <td><obs conceptId="165518" labelText="Timing of Mother's ART Initiation:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="164855" labelText=" Mother's ART Regimen :"/></td>
            </tr>

        </table>
    </section>
    <section headerLabel="Infant ARV Prophlaxis">
        <table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
            <tr>
                <td><obs conceptId="164971" labelText="Infant ARV Type:"/></td>
            </tr>

            <tr>
                <td>Timing of ARV Prophylaxis:</td>
                <td></td>
            </tr>

        </table>
    </section>
    <section headerLabel="Infant CTX">
        <table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
            <tr>
                <td><obs conceptId="164971" labelText="Age at CTX Initiation:"/></td>
            </tr>

            <tr>
                <td>Age at CTX Initiation:</td>
                <td></td>
            </tr>

        </table>
    </section>
    <section headerLabel="Infant Testiing (PCR): 1st PCR">
        <table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
            <tr>
                <td><obs conceptId="164985" labelText="Age at Test months:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="164986" labelText=" Date Sample Collected dd/mm/yy:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="164988" labelText=" Date Sample Sent dd/mm/yy:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="164990" labelText="Date Result Received at Facility:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="164995" labelText="Date Caregiver Given Result dd/mm/yy:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="164993" labelText="Result:"/></td>
            </tr>
        </table>
    </section>
    <section headerLabel="Infant Testiing (PCR): 2nd PCR">
        <table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
            <tr>
                <td><obs conceptId="165004" labelText="Age at Test months:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="165007" labelText="Date Sample Collected dd/mm/yy:"/></td>
            </tr>
            <tr>
                <td><obs conceptId="165015" labelText="Result:"/></td>
            </tr>

        </table>
    </section>

    <submit/>

