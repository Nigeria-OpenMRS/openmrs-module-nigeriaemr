<htmlform>
	<!-- General Antenatal Register 10-Apr-2018 -->
	<macros>
		paperFormId = (Fill this in)
		headerColor =#009d8e
		fontOnHeaderColor = white
	</macros>

	<style>
		.section {
			border: 1px solid $headerColor;
			padding: 2px;
			text-align: left;
			margin-bottom: 1em;
		}
		.sectionHeader {
			background-color: $headerColor;
			color: $fontOnHeaderColor;
			display: block;
			padding: 2px;
			font-weight: bold;
		}
		table.baseline-aligned td {
			vertical-align: baseline;
		}
	</style>
         <script type="text/javascript">
         </script>
	<span style="float:right">Paper Form ID: General Antenatal Register</span>
	
      <div class="hidden" id="encounter-details" sectionTag="section" headerStyle="title" headerLabel="Encounter Details">
         <section headerLabel="Encounter Details" style="width: 40%; margin-left: 30%;">
              
             <fieldset>
            <legend>ANC Enrollment Date</legend>
            <label>ANC Enrollment Date</label>

            <encounterDate default="now" showTime="false" allowFutureDates="false"/>
        </fieldset>
         <fieldset>
            <legend>Facility</legend>
            <label>Facility</label>
            <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"/>
        </fieldset>
         <fieldset>
            <legend>Service Provider</legend>
            <label>Service Provider</label>
            <encounterProviderAndRole default="currentUser" encounterRole="240b26f9-dd88-4172-823d-4a8bfeb7841f" required="true"/>
        </fieldset>
</section>
</div>
 <section headerLabel="General Antenatal Form" id="genanc" sectionTag="section" headerStyle="title">
 <table style="margin-bottom: 20px;">
                                <thead>
                                            <tr><th colspan='2' style="text-align: center">NATIONAL ANTENATAL REGISTER</th></tr>
                                    
                                </thead>
                                 <tbody>
                                       <tr><td colspan='1'> Name: <lookup class="value" expression="patient.personName"/> </td><td> </td></tr>
<tr><td>Address:<lookup expression="patient.personAddress.address1"/>
                                     &#160;&#160;
                                     <lookup expression="patient.personAddress.cityVillage"/></td><td>Phone: <lookup complexExpression="$fn.latestObs(159635)"/></td></tr>
                                      
                                       <tr><td>Hospital Reg. No: <lookup class="value" complexExpression="#foreach( $patId in $patientIdentifiers.get('Hosp Registration No') ) $patId #end "/></td>

<td>ANC No: <lookup class="value" complexExpression="#foreach( $patId in $patientIdentifiers.get('ANC No') ) $patId #end "/></td>




</tr>
                                        
                                </tbody>
                         </table>
        
       
                 <fieldset>

</fieldset>

<fieldset>
                        <legend>Visit</legend>
                        <p class="left"><table class='left'>
                             
                             <tbody>
                                      <tr><td>Provider</td><td><encounterProviderAndRole default="currentUser" encounterRole="240b26f9-dd88-4172-823d-4a8bfeb7841f" required="true"/></td><td>Who attended to patient (Mentor mother,Nurse)</td></tr>
                                      <!--<tr><td>Date</td><td><p class="left"><obs conceptId="164856"/></p></td><td>Enter the date of registration in facility</td></tr>-->
                                      <tr><td>Visit Date</td><td><p class='left'><encounterDate default="now" showTime="false"/></p></td></tr>
                                      <tr><td>Facility Name</td><td><p class='left'><encounterLocation default="SessionAttribute:emrContext.sessionLocationId"/></p></td></tr>
                             </tbody>
                       </table></p>

              </fieldset>

               <fieldset>
                              <legend>IDENTIFICATION</legend>
                              <table>
                                   
                                    <tbody>
                                 <p class='left'><tr><td>Date</td><td><p class='left'></p></td></tr></p>
                                 <p class='left'><tr><td>ANC No</td><td><p class='left'></p></td></tr></p>
                                 
                                    </tbody>
                              </table>
                      </fieldset>        
               
                  <fieldset>
                       <legend>CLINICAL</legend>
                       <table>
                      
                           <tbody> <tr><td>Date of Birth: <lookup class="value" complexExpression="#if( \$patient.birthdateEstimated ) ~#end"/> <lookup class="value" expression="patient.birthdate"/></td>
                                       <td>Age: <lookup class="value" expression="patient.age"/></td></tr>
                                <tr><td>LMP</td><td><p class='left'></p></td></tr>
                                <tr><td>GRAVIDA</td><td><p class='left'></p></td></tr>
                                <tr><td>PARITY</td><td><p class='left'></p></td></tr><tr><td>Source of referral</td><td><p class='left'></p></td></tr>
<tr><td>EDD</td><td><p class='left'></p></td></tr>
                           </tbody>
                       </table>
                        
                 </fieldset>
                   
                 <fieldset>
                       <legend>SYPHILIS</legend>
                        <table>
                            <tr><td>Tested for Syphilis</td><td><obs conceptId="165280"/><p class='left'></p></td></tr>
                           <tr><td>Syphilis test date</td><td><obs conceptId="164952"/></td></tr>
                            <tr><td>Syphilis test result</td><td><p class='left'></p></td></tr>
                            <tr><td>Treated for syphilis(penicillin)</td><td><p class='left'></p></td></tr>
                            <tr><td><label>Syphilis treatment date</label></td><td><obs conceptId="164953"/></td><td></td></tr>
                            <tr><td>Referred Syphilis +ve client</td><td><p class='left'><obs conceptId="165517"/></p></td></tr>
                     
                        </table>
                        
                        <p id="dateofsyphilistest" class='left'></p>

                 </fieldset>
                 
        </section>








      
      
	

	


</htmlform>