<htmlform>
	<!-- Autogenerated example form  (template from 01-Nov-2010 -->
	<macros>
		paperFormId = (Fill this in)
		headerColor =#009d8e
		fontOnHeaderColor = white
	</macros>

	<style>
		.section {
        border: 1px solid $headerColor;
        padding: 2px;
        text-align: left;
        margin-bottom: 1em;
        }
        .sectionHeader {
        background-color: $headerColor;
        color: $fontOnHeaderColor;
        display: block;
        padding: 2px;
        font-weight: bold;
        }
        .alnright { text-align: right; }
        td {
        border: none;
        }

        table th, table td {
        padding: 5px 10px;
        border: None;
        }
        table th, table td {
        padding: 5px 10px;
        /* border: 1px solid #DDD; */
        }
        table tr {
        border: None;
        }
		
	</style>

	<span style="float:right">Paper Form ID: $paperFormId</span>
	
	<section headerLabel="Care Card">
		<table cellpadding="10" cellspacing="7" style="width: 80%; margin-left:10%;">
		<tr>
				<td>Location:</td>
				<td><encounterLocation/></td>
			
				<td>Provider:</td>
				<td><encounterProvider/></td>
			</tr>
            <tr>
             <td>Visit Date:</td>
			<td><encounterDate default="today"/></td> 
			<td>Duration (in Months) on ART:</td>
				<td><obs conceptId="165281"   /></td>
				
			</tr>

			<tr>
							
				<td>Weight (kg):</td>
				<td><obs conceptId="5089"  /></td>
                 <td>Height/Length (cm):</td>
				<td><obs conceptId="5090"  /></td>
			   </tr>
			   
			   <tr>
                 <td>BMI/MUAC:</td>
				<td><obs conceptId="165243"  /></td>
               <td>Blood Pressure:</td>
				<td><obs conceptId="5085" labelText="Systolic:"  /><b> /</b> <obs conceptId="5086" labelText="Diastolic:"  /></td>
			   </tr>
                   
            <tr>
                <td>Pregnancy/ Breastfeeding Status:</td>
				<td><obs conceptId="5272"  /></td>
				<td>Family Planning :</td>
				<td><obs conceptId="5271" style="no_yes"  /></td>
			</tr>
			
			<tr>
                <td>Functional status :</td>
				<td><obs conceptId="165039"  /></td>
				
				<td>WHO Clinical Stage :</td>
				<td><obs conceptId="165286"  /></td>
			</tr>
			
			<tr>
               <td>TB Status :</td>
				<td><obs conceptId="1659"  /></td>
				<td>Other OIs/Other Problems :</td>
				<td></td>
			</tr>
			

			<tr>
              <td>Noted Side Effects :</td>
				<td></td>
				<td>Consult Hospitalise Refer Link :</td>
				<td></td>
			</tr>
						
			<tr>
                <td>Next Appointment Date :</td>
				<td><obs conceptId="165036"  /></td>
				 <td>Signature :</td>
				 <td></td>
			</tr>
			
	
			
			


		</table>
	</section>

	

	<submit/>


</htmlform>